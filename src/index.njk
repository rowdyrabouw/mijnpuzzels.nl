---
title: Alle puzzels
layout: layouts/page.njk
---

<div class="wrapper">
  {% for brand, puzzles in puzzles.puzzlesAll | groupby("brand") %}
  <h2>{{ brand }}</h2>
  {% for puzzle in puzzles %}
  <li>
    <div class="img">
      <img src="/assets/img/{{ puzzle.brand | lower | replace(" ", "-") }}-{{ puzzle.title | lower | replace(" ", "-")}}-{{ puzzle.pieces}}.jpg">
      {% if puzzle.done == true %}{% include "./_includes/svg/checked.njk" %}{% endif %}
    </div>
    <strong>{{ puzzle.title }}</strong> ({{ puzzle.pieces }})
  </li>
  {% endfor %}
  {% endfor %}
</div>